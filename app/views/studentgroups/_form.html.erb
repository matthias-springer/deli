  <table class = "table table-striped">
    <tbody>
      <tr>
        <th>Studenten</th>
        <td>
          <% if !@group.students.blank? %>
            <% for student in @group.students %>
              <%= link_to student, user_path(student)%> <br>
            <% end %>
          <% else %>
            <p class="badge badge-info">Noch keine Stundenten vorhanden</p>
          <% end %>
        </td>
        <td>
          <%= form_tag add_student_path(@group.id), :method => 'put' do%>
            <div class="input-append">
              <%= hidden_field_tag 'chosen_student' %>
              <input type="text" autocomplete="off" id="studentgroup_students">
              <button class="btn btn-success">
                <i class="icon-plus"></i>
              </button>
            </div>
          <% end %>
        </td>
      </tr>
      <% if can? :add_tutor, Studentgroup %>
        <tr>
          <th>Tutoren</th>
          <td>
            <% if !@group.tutors.blank? %>
              <% for student in @group.tutors %>
                <%= link_to student, user_path(student)%> <br>
              <% end %>
            <% else %>
              <p class="badge badge-info">Noch keine Tutoren vorhanden</p>
            <% end %>
          </td>
          <td>
            <%= form_tag add_tutor_path(@group.id), :method => 'put' do%>
              <div class="input-append">
                <%= hidden_field_tag 'chosen_tutor' %>
                <input type="text" autocomplete="off" id="studentgroup_tutors">
                <button class="btn btn-success">
                  <i class="icon-plus"></i>
                </button>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= form_for @group, :builder => StandardFormBuilder, :html=>{:class => "form-horizontal"} do |f| %>
  <%= f.errors @group.errors%>
  <div class="form-actions">
    <%= f.hidden_field 'id', :value => @group.id%>
    <%= f.submit "Speichern", :class => "btn btn-success pull-right" %>
    <%= link_to "Reset", new_studentgroup_path, :class => "btn btn-success " %>
  </div>
<% end %>
