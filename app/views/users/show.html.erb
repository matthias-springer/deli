<h2>Benutzer</h2>

<table class="table table-striped">
  <tbody>
    <tr>
      <th>Name</th>
      <td> <%=@user.to_s%> </td>
      </tr>
    <tr>
      <th>Rollen</th>
      <td>
        <div class="row-fluid">
          <div class="span6">
            Admin: 
          </div>
          <div class="span6">
            <span class="badge badge-info"><%= @user.admin? ? 'Ja' : 'Nein' %> </span><br>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            Tutor: 
          </div>
          <div class="span6">
            <span class="badge badge-info"><%= @user.tutor? ? 'Ja' : 'Nein' %></span> <br>
          </div>
        </div>
      </td>
    </tr>
  </tbody>
</table>