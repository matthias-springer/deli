<!DOCTYPE html>
<html>
<head>
  <title>Deli</title>
  <%= stylesheet_link_tag    "bootswatch", "bootstrap.min", "bootstrap-responsive.min" %>
  <%= javascript_include_tag "http://code.jquery.com/jquery.js", "bootstrap.min" %>
  <%= csrf_meta_tags %>
</head>
<body class="index">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="/">Deli</a>
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="nav-collapse collapse">
          <% if current_user %>
            <ul class="nav">
              <li><%=link_to "Vorlesungen", :controller => "lectures", :action => "index"%></li>
              <li><%=link_to "Profil", user_path(current_user.id) %></li>
            </ul>
            <ul class="nav pull-right">
              <li><%=link_to "Logout", :controller => "sessions", :action => "destroy" %></li>
            </ul>
          <%else%>
            <ul class="nav pull-right">
              <li><%=link_to "Login", :controller => "sessions", :action => "new" %></li>
            </ul>

          <%end%>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-info">
          <button class="close" data-dismiss = "alert"> &times;</button>
          <%= flash[:notice]%>
        </div>
      <% end %>
      <% if flash[:error] %>
        <div class="alert alert-error">
          <button class="close" data-dismiss = "alert"> &times;</button>
          <%= flash[:error]%>
        </div>
      <% end %>

      <%= link_to "ZurÃ¼ck", url_for(:back), :class => "btn btn-mini btn-primary pull-right" %>


      <%= yield %>
    </div> <!-- /container -->
</body>
</html>
